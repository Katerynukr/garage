{% extends 'base.html.twig' %}

{% block title %}Create new Truck
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card fraim">
					<div class="card-header head-color">
						<h1>Create new Truck </h1>
					</div>

					<div class="card-body bck">
						<form action="{{path('truck_store')}}" method="POST">
							<div class="form-group">
								<label>Maker:</label>
								<input type="text" class="form-control" name="truck_maker">
								<small class="form-text text-muted">Truck maker.</small>
							</div>

							<div class="form-group">
								<label>Plate:</label>
								<input type="text" class="form-control" name="truck_plate">
								<small class="form-text text-muted">Truck plate.</small>
							</div>

							<div class="form-group">
								<label>Year of production:</label>
								<input type="text" class="form-control" name="truck_make_year">
								<small class="form-text text-muted">Production year.</small>
							</div>
							<div class="form-group">
								Notes:<textarea name="truck_mechanic_notices" id="summernote"></textarea>
							</div>
							<div class="form-group">
								<select name="truck_mechanick_id" class="form-control">
									<option value="0">Select mechanick</option>
									{% for mechanick in mechanicks %}
										<option value="{{mechanick.id}}">{{mechanick.name}}
											{{mechanick.surname}}</option>
									{% endfor %}
								</select>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn btn-dark add">Add new Truck</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}

